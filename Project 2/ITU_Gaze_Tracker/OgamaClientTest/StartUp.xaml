<Window x:Class="OgamaClientTest.StartUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ogama Test Program for ITU GazeTracker Client" Width="303" AllowsTransparency="False" WindowStyle="ThreeDBorderWindow" Background="Azure" Height="223">
  <StackPanel Orientation="Vertical" Margin="6">
    <Label FontSize="16">Test the following client:</Label>
    <StackPanel Orientation="Horizontal">
      <RadioButton Name="rdbITUDefault" VerticalAlignment="Center" Width="65" Checked="rdbITUDefault_Checked" IsChecked="True">Default</RadioButton>
      <TextBlock TextWrapping="Wrap" Padding="6" Width="200">The default ITU Gaze Tracker client for use with a webcam.</TextBlock>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <RadioButton Name="rdbITUPS3" IsChecked="False" VerticalAlignment="Center" Width="65" Checked="rdbITUPS3_Checked">PS3</RadioButton>
      <TextBlock TextWrapping="Wrap" Padding="6" Width="200">The ITU Gaze Tracker client for use with the modified PlayStation3 Eye Camera.</TextBlock>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
      <Button Margin="0,0,10,0" IsDefault="True"  Width="60" Name="Start" Click="Start_Click">Start</Button>
      <Button IsCancel="True" Width="60" Name="Cancel" Click="Cancel_Click">Cancel</Button>
    </StackPanel>
  </StackPanel>
</Window>
